            <ToggleGroup fx:id="diffusionGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="anisotropica" layoutX="129.0" layoutY="89.0" mnemonicParsing="false" onAction="#onAnisotropicaSelection" selected="true" text="Anisotrópica" toggleGroup="$diffusionGroup" />
